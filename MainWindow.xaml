<Window x:Class="ProjektSem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSem"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    
    <StackPanel Orientation="Vertical">
        <Border Background="#2f5cb6"/>
        <Border Grid.Column ="1" Background="#1f3d7a"/>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#152951"/>
        <TextBlock FontSize="40">Asystent obsługi szpitala</TextBlock>
        <Button Name="btnFirst" Content="Doktorzy" Click="btnFirst_Click"/>
        <Button Name="btnThird" Content="Pacjenci" Click="btnThird_Click"/>
        <Button Name="btnForth" Content="Wizyty" Click="btnForth_Click"/>
        <Button Name="btnFifth" Content="Diagnozy" Click="btnFifth_Click"/>
        
    </StackPanel>
</Window>
 
